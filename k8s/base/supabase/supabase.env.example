# Supabase Environment Configuration
# Copy this to supabase.env and fill in your values

# Database
POSTGRES_HOST=supabase-db
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_USER=postgres

# URLs
API_EXTERNAL_URL=https://api.invisible.local
SUPABASE_PUBLIC_URL=https://api.invisible.local
SITE_URL=https://app.invisible.local

# Service Discovery (internal K8s service names)
KONG_URL=http://supabase-kong:8000
AUTH_URL=http://supabase-auth:9999
REST_URL=http://supabase-rest:3000
REALTIME_URL=http://supabase-realtime:4000
STORAGE_URL=http://supabase-storage:5000
FUNCTIONS_URL=http://supabase-functions:3000
META_URL=http://supabase-meta:8080
STUDIO_URL=http://supabase-studio:3000
ANALYTICS_URL=http://supabase-analytics:4000

# Features
ENABLE_EMAIL_SIGNUP=true
ENABLE_PHONE_SIGNUP=true
DISABLE_SIGNUP=false

# Ports
KONG_HTTP_PORT=8000
KONG_HTTPS_PORT=8443
POOLER_PROXY_PORT_TRANSACTION=6543